{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "resolveJsonModule": true,
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "preserveConstEnums": true,
    "baseUrl": "./lib",
    "typeRoots": ["./Types", "../node_modules/@types"]
  },
  "include": ["**/*.ts"],
  "exclude": ["examples", "dist"]
}
